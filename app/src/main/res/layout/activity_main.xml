<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.truetech.xltracker.MainActivity">

    <Button
            android:text="@string/btn_exit"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:id="@+id/btn_exit"
            android:onClick="exit"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="79dp"/>
    <ListView
            android:id="@+id/key_listView_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/btn_view_settings"
            android:layout_marginBottom="50dp"/>
    <Button
            android:text="@string/btn_options"
            android:id="@+id/btn_view_settings"
            android:onClick="viewSettings"
            android:layout_height="75dp"
            android:layout_width="200dp"
            android:layout_marginBottom="142dp"
            android:layout_alignBottom="@+id/btn_exit"
            android:layout_alignStart="@+id/btn_exit"/>

</RelativeLayout>
